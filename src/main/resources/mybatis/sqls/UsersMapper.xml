<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.chigirh.knowledge.infra.mysql.mapper.UsersMapper">
    <insert id="insert">
        INSERT INTO users
        VALUES (
            #{entity.userId},
            #{entity.userName}
        )
    </insert>
    <select id="findByKey" resultType="com.chigirh.knowledge.infra.mysql.entity.UsersEntity">
        SELECT
            user_id,
            user_name
        FROM users
        WHERE user_id = #{userId}
    </select>
</mapper>
